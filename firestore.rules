rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isProUser() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.plan == 'pro';
    }

    function isNonEmptyString(value) {
      return value is string && value.size() > 0;
    }

    function isNullOrString(value) {
      return value == null || value is string;
    }

    function isNullOrTimestamp(value) {
      return value == null || value is timestamp;
    }

    function isNullOrPriority(value) {
      return value == null || (value is string && value in ['low', 'medium', 'high']);
    }

    function isOptionalBool(value) {
      return value == null || value is bool;
    }

    function isServerTimestamp(value) {
      return value == request.time;
    }
    
    // Users collection
    match /users/{userId} {
      allow read, delete: if request.auth != null && request.auth.uid == userId;

      // Client-side user profile creation is only allowed for the authenticated user.
      // The plan must start as 'free' from the client; upgrades are applied server-side (Admin SDK).
      allow create: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.uid == userId
        && request.resource.data.plan == 'free'
        && isServerTimestamp(request.resource.data.createdAt)
        && isServerTimestamp(request.resource.data.updatedAt);

      // Client-side updates are limited to profile/settings/device tokens.
      // Prevent client from updating billing/plan fields.
      allow update: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.uid == resource.data.uid
        && request.resource.data.plan == resource.data.plan
        && isServerTimestamp(request.resource.data.updatedAt)
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'displayName',
          'settings',
          'fcmTokens',
          'updatedAt'
        ]);

      // Assistant namespace (user-scoped)
      match /assistantSettings/{docId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      match /assistantObjects/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
      match /assistantJobs/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
      match /assistantAIJobs/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
      match /assistantSuggestions/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
      match /assistantAIResults/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
      match /assistantVoiceJobs/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
      match /assistantVoiceResults/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
      match /assistantDecisions/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
      match /assistantMetrics/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
      match /assistantUsage/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
      match /assistantEvents/{docId} {
        allow read: if isAuthenticated() && isOwner(userId);
        allow write: if false;
      }
    }
    
    // Notes collection
    match /notes/{noteId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;

      allow create: if isAuthenticated()
        && request.auth.uid == request.resource.data.userId
        && ('workspaceId' in request.resource.data)
        && isNullOrString(request.resource.data.workspaceId)
        && isNonEmptyString(request.resource.data.title)
        && isNullOrString(request.resource.data.content)
        && isOptionalBool(request.resource.data.favorite)
        && isOptionalBool(request.resource.data.completed)
        && isServerTimestamp(request.resource.data.createdAt)
        && isServerTimestamp(request.resource.data.updatedAt);

      allow update: if isAuthenticated()
        && request.auth.uid == resource.data.userId
        && request.resource.data.userId == resource.data.userId
        && isNullOrString(request.resource.data.workspaceId)
        && isNonEmptyString(request.resource.data.title)
        && isNullOrString(request.resource.data.content)
        && isOptionalBool(request.resource.data.favorite)
        && isOptionalBool(request.resource.data.completed)
        && isServerTimestamp(request.resource.data.updatedAt);

      allow delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    // Todos collection
    match /todos/{todoId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;

      allow create: if isAuthenticated()
        && request.auth.uid == request.resource.data.userId
        && ('workspaceId' in request.resource.data)
        && isNullOrString(request.resource.data.workspaceId)
        && isNonEmptyString(request.resource.data.title)
        && (!('dueDate' in request.resource.data) || isNullOrTimestamp(request.resource.data.dueDate))
        && (!('priority' in request.resource.data) || isNullOrPriority(request.resource.data.priority))
        && isOptionalBool(request.resource.data.completed)
        && isOptionalBool(request.resource.data.favorite)
        && isServerTimestamp(request.resource.data.createdAt)
        && isServerTimestamp(request.resource.data.updatedAt);

      allow update: if isAuthenticated()
        && request.auth.uid == resource.data.userId
        && request.resource.data.userId == resource.data.userId
        && ('workspaceId' in request.resource.data)
        && isNullOrString(request.resource.data.workspaceId)
        && isNonEmptyString(request.resource.data.title)
        && (!('dueDate' in request.resource.data) || isNullOrTimestamp(request.resource.data.dueDate))
        && (!('priority' in request.resource.data) || isNullOrPriority(request.resource.data.priority))
        && isOptionalBool(request.resource.data.completed)
        && isOptionalBool(request.resource.data.favorite)
        && isServerTimestamp(request.resource.data.updatedAt);

      allow delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;

      allow create: if isAuthenticated()
        && request.auth.uid == request.resource.data.userId
        && ('workspaceId' in request.resource.data)
        && isNullOrString(request.resource.data.workspaceId)
        && isNonEmptyString(request.resource.data.title)
        && (request.resource.data.status in ['todo', 'doing', 'done'])
        && (!('startDate' in request.resource.data) || isNullOrTimestamp(request.resource.data.startDate))
        && isNullOrTimestamp(request.resource.data.dueDate)
        && (!('priority' in request.resource.data) || isNullOrPriority(request.resource.data.priority))
        && isOptionalBool(request.resource.data.favorite)
        && isServerTimestamp(request.resource.data.createdAt)
        && isServerTimestamp(request.resource.data.updatedAt);

      allow update: if isAuthenticated()
        && request.auth.uid == resource.data.userId
        && request.resource.data.userId == resource.data.userId
        && isNullOrString(request.resource.data.workspaceId)
        && isNonEmptyString(request.resource.data.title)
        && (request.resource.data.status in ['todo', 'doing', 'done'])
        && (!('startDate' in request.resource.data) || isNullOrTimestamp(request.resource.data.startDate))
        && isNullOrTimestamp(request.resource.data.dueDate)
        && (!('priority' in request.resource.data) || isNullOrPriority(request.resource.data.priority))
        && isOptionalBool(request.resource.data.favorite)
        && isServerTimestamp(request.resource.data.updatedAt);

      allow delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
    
    // Task Reminders collection
    match /taskReminders/{reminderId} {
      allow read: if request.auth != null && isProUser() && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && isProUser() && request.auth.uid == request.resource.data.userId;
      // Only allow updates to the 'sent' field
      allow update: if request.auth != null && 
                      request.auth.uid == resource.data.userId &&
                      request.resource.data.userId == resource.data.userId &&
                      request.resource.data.taskId == resource.data.taskId &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['dueDate', 'reminderTime', 'sent']);
      allow delete: if request.auth != null && isProUser() && request.auth.uid == resource.data.userId;
    }
    
    // Workspaces collection
    match /workspaces/{workspaceId} {
      allow read: if isAuthenticated() && (
        isOwner(resource.data.ownerId) || 
        request.auth.uid in resource.data.members
      );
      allow create: if isAuthenticated()
        && request.resource.data.ownerId == request.auth.uid
        && request.resource.data.members is list
        && request.resource.data.members.size() == 0
        && request.resource.data.name is string
        && request.resource.data.name.size() > 0
        && request.resource.data.name.size() <= 80;
      allow update: if isAuthenticated() && 
        isOwner(resource.data.ownerId) &&
        request.resource.data.ownerId == resource.data.ownerId &&
        request.resource.data.name is string &&
        request.resource.data.name.size() > 0 &&
        request.resource.data.name.size() <= 80 &&
        request.resource.data.members is list &&
        request.resource.data.members.size() == resource.data.members.size();
      allow delete: if isAuthenticated() && 
        isOwner(resource.data.ownerId);
    }
  }
}
