rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAllowedAttachmentMime() {
      return request.resource.contentType == 'image/jpeg' ||
        request.resource.contentType == 'image/png' ||
        request.resource.contentType == 'image/webp' ||
        request.resource.contentType == 'application/pdf' ||
        request.resource.contentType == 'video/mp4' ||
        request.resource.contentType == 'video/quicktime';
    }

    function isAllowedAttachmentSize() {
      return request.resource.size < 120 * 1024 * 1024;
    }

    function isAllowedAttachmentExtension(path) {
      return path.matches('.*\\.(jpg|jpeg|png|webp|pdf|mp4|mov)$');
    }

    function isNotesAttachmentPath(path) {
      return path.matches('notes/.*');
    }
    
    // User files
    match /users/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && isOwner(userId);
      // Do not allow this generic rule to grant access to note attachments.
      // Attachments are enforced by the dedicated /users/{userId}/notes/... rule below.
      allow write: if isAuthenticated() && isOwner(userId) && !isNotesAttachmentPath(allPaths);
    }
    
    // Note attachments
    match /users/{userId}/notes/{noteId}/{allFiles=**} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if isAuthenticated() && isOwner(userId) && (
        request.resource == null ||
        (isAllowedAttachmentSize() && (isAllowedAttachmentMime() || isAllowedAttachmentExtension(allFiles)))
      );
    }
    
    // Workspace files
    match /workspaces/{workspaceId}/{allPaths=**} {
      allow read: if isAuthenticated() && (
        firestore.exists(/databases/(default)/documents/workspaces/$(workspaceId)) &&
        (
          firestore.get(/databases/(default)/documents/workspaces/$(workspaceId)).data.ownerId == request.auth.uid ||
          request.auth.uid in firestore.get(/databases/(default)/documents/workspaces/$(workspaceId)).data.members
        )
      );
      allow write: if isAuthenticated() && 
        firestore.exists(/databases/(default)/documents/workspaces/$(workspaceId)) &&
        firestore.get(/databases/(default)/documents/workspaces/$(workspaceId)).data.ownerId == request.auth.uid;
    }
  }
}
